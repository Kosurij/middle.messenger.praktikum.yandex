{
  "extends": "stylelint-config-standard",
  "customSyntax": "postcss-less",
  "rules": {
    "indentation": 2,
    "string-quotes": "single",
    "selector-pseudo-class-no-unknown": null,
    "no-descending-specificity": null,
    "property-no-unknown": null,
    "selector-class-pattern": "[A-Z]*"
  },
  "ignoreFiles": ["**/*.css"]
}
